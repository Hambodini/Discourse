@model IEnumerable<Discourse.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Find People to Friend</h2>

@using (Html.BeginForm("SearchPeople", "Friend"))
{
    <input type="text" name="searchText" placeholder="Enter first name last name" />
    <input type="submit" value="Find" />
    <br /><br />
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Add Friend</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    @using (Html.BeginForm("AddFriend", "Friend"))
                    {
                        <input type="hidden" name="friendId" value="@user.Id" />
                        <input type="submit" value="Add Friend" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

