@model IEnumerable<Discourse.Models.ApplicationUser>
@{
    ViewBag.Title = "FriendsList";
}

<h2>Your Friends</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>View Profile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var friend in Model)
        {
            <tr>
                <td>@friend.FirstName</td>
                <td>@friend.LastName</td>
                <td>@friend.Email</td>
                <td>
                    @using (Html.BeginForm("FriendPosts", "Profile", new { id = friend.Id }))
                    {
                        <input type="submit" value="View Profile" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>